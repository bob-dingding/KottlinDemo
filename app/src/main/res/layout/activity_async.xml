<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AsyncActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <Button
                    android:id="@+id/btn_coroutinesGuide"
                    android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                    android:text="协程指南"
                    android:layout_gravity="center_horizontal"
                    />
            <Button
                    android:id="@+id/btn_coroutinesBasic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="基础"
                    android:layout_gravity="center_horizontal"
                    />
            <Button
                    android:id="@+id/btn_coroutines_cancelwithtimeout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消与超时"
                    android:layout_gravity="center_horizontal"
                    />
            <Button
                    android:id="@+id/btn_coroutines_hangupfun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="组合挂起函数"
                    android:layout_gravity="center_horizontal"
                    />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="协程上下文与调度器"
                    android:layout_gravity="center_horizontal"
                    />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="异步流"
                    android:layout_gravity="center_horizontal"
                    />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通道"
                    android:layout_gravity="center_horizontal"
                    />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="异常处理与监督"
                    android:layout_gravity="center_horizontal"
                    />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共享的可变状态与并发"
                    android:layout_gravity="center_horizontal"
                    />
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select表达式"
                    android:textAllCaps="false"
                    android:layout_gravity="center_horizontal"
                    />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>