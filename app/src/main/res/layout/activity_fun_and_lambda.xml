<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FunAndLambdaActivity">

    <Button
            android:text="函数"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_funciton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="Lambda表达式"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:id="@+id/btn_lambda" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="46dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_funciton"/>
    <Button
            android:text="内联函数"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_innerfunciont" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="48dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_lambda" app:layout_constraintHorizontal_bias="0.498"/>
</android.support.constraint.ConstraintLayout>